/* pages/nba/live_detail.wxss */

page {
  height: auto;
  min-height: 100%;
}

swiper {
  min-height: 100%;
  height: auto;
  float: left;
}

view,
text {
  box-sizing: border-box;
}

.live-gameheader {
  width: 100%;
  background: url('http://cdn.it919.cn/bg.png') no-repeat;
  height: auto;
  background-size: cover;
  padding-top: 20rpx;
  float: left;
}

.gameinfo {
  height: 160rpx;
  color: #fff;
}

.team {
  float: left;
  width: 195rpx;
  height: 100%;
  font-size: 32rpx;
  text-align: center;
}

.team image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto;
}

.team text {
  font-size: 28rpx;
  display: block;
}

.live-time {
  font-size: 28rpx;
}

.live-info {
  width: 360rpx;
  height: 100%;
  text-align: center;
  float: left;
  line-height: 80rpx;
}

.live-score {
  font-size: 48rpx;
}

.like-progress {
  height: 70rpx;
  padding-top: 20rpx;
  width: 100%;
  float: left;
  padding: 0 38rpx;
  box-sizing: border-box;
  margin-top: 10px;
}

.bar {
  width: 100%;
  height: 8rpx;
  background: #ff6800;
  border-radius: 5rpx;
}

.left-bar {
  width: 100px;
  background: red;
}

.bar .bar-line {
  display: block;
  height: 8rpx;
  border-radius: 5rpx;
}

.bar-num {
  font-size: 28rpx;
  color: #fff;
}

.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #e3e3e3;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.333%;
  color: #777;
}

.on {
  color: #00aa98;
}

.swiper-box {
  display: block;
  width: 100%;
  box-sizing: border-box;
  height: auto;
  min-height: 100%;
  float: left;
}

.swiper-item {
  width: 100%;
  height: 100%;
  display: none;
  box-sizing: border-box;
}

view.active {
  display: block;
}

.liveroom_cuser {
  width: 100%;
  height: 40px;
  font-size: 24rpx;
}

.user-img {
  width: 60rpx;
  height: 60rpx;
  float: left;
  border-radius: 30rpx;
}

.live-score {
  font-size: 28rpx;
}

.liveroom_cuser {
  font-size: 24rpx;
  line-height: 60rpx;
}

.live-user {
  color: #00aa98;
  margin-left: 10px;
  margin-right: 10px;
}

.content-msg {
  text-align: left;
  font-size: 28rpx;
}

.live-content-item {
  margin-top: 30rpx;
  width: 100%;
  float: left;
}

.text-msg {
  font-size: 30rpx;
  text-align: left;
  float: left;
  display: block;
  width: 100%;
}

.img-msg {
  float: left;
}

.img-msg text {
  float: left;
}

.img-msg .img-msg-image {
  float: left;
  width: 700rpx;
}

.content-msg image {
  float: left;
  width: 700rpx;
  height: 400rpx;
}

.game-info-title {
  width: 100%;
  font-size: 28rpx;
  float: left;
  text-align: left;
  height: 70rpx;
  line-height: 70rpx;
}

/*表格  */

.thead {
  width: 100%;
  height: 48rpx;
  background: #f8f8f8;
  line-height: 48rpx;
  float: left;
}

.team-score {
  width: 100%;
  line-height: 60rpx;
  float: left;
}

.team-score image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}

.thead text,
.team-score text,
.table-image {
  width: 16.66%;
  display: block;
  float: left;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  height: 120rpx;
}

.table-image view {
  display: block;
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e3e3e3;
  float: left;
}

.sec_scores {
  width: 66.666%;
  float: left;
}

.one-quarter {
  width: 25%;
  height: 120rpx;
  float: left;
}

.sec_scores text {
  width: 100%;
  display: block;
  height: 60rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.total-score {
  float: right;
  height: 120rpx;
  width: 16.6666%;
}

.total-score text {
  width: 100%;
  display: block;
  height: 60rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.top-player {
  width: 100%;
  box-sizing: border-box;
  float: left;
  height: auto;
  overflow: hidden;
  clear: both;
}

.top-player .top-player-title {
  width: 100%;
  height: 100rpx;
  background: #f5f5f5;
  float: left;
  line-height: 100rpx;
  margin-top: 50rpx;
}

.top-player .top-player-title text {
  display: block;
  float: left;
  text-align: center;
  font-size: 28rpx;
}

.top-team-player-name {
  width: 25%;
}

.top-team-player {
  width: 50%;
  text-align: center;
}

.team-top-play-item {
  width: 35%;
  float: left;
  overflow: hidden;
  height: auto;
}

.data-title {
  width: 30%;
  float: left;
  text-align: center;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.data-title view {
  display: block;
  border-bottom: 1rpx solid #e3e3e3;
  height: 80rpx;
  line-height: 80rpx;
}

.team-top-play-item view {
  display: block;
  width: 100%;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e3e3e3;
  overflow: hidden;
}

.player-data-header {
  width: 100%;
  height: 80rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  float: left;
}

.player-data-header text:first-child {
  width: 20%;
}

.player-data-header text {
  display: block;
  width: 10%;
  float: left;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.player-data-item {
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  float: left;
}

.player-data-item text {
  display: block;
  width: 10%;
  float: left;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  overflow: hidden;
}

.player-data-item text:first-child {
  font-size: 24rpx;
  text-align: left;
  padding-left: 6px;
  width: 20%;
}

.f5f5f5 {
  background: #f5f5f5;
}

.teamer-name {
  width: 94%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #00aa98;
  border-left: 3px solid #00aa98;
  clear: both;
  float: left;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 3%;
}
