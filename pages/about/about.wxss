text,
view {
  box-sizing: border-box;
}

.a-head {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 30rpx;
  float: left;
  margin-top: 10px;
}

.a-head .left {
  font-size: 24rpx;
}

.a-head .left view {
  line-height: 50rpx;
}

.name {
  font-size: 32rpx;
}

.job {
  color: #999;
}

.a-head .right image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.wrap {
  width: 100%;
  padding: 30rpx;
  padding-top: 10rpx;
  float: left;
  box-sizing: border-box;
}

.line {
  width: 100%;
  border-top: 1rpx solid #e3e3e3;
}

.list-view {
  font-size: 28rpx;
  padding: 20rpx 30rpx 20rpx 55rpx;
  float: left;
  width: 100%;
  box-sizing: border-box;
  box-shadow: inset 0px -1px 1px -1px #e3e3e3;
  color: #555;
}

.Motto {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  float: left;
}

.icon-address {
  background: url('data:image/png;base64,')
    left no-repeat;
  background-size: 50rpx;
}

.icon-mail {
  background: url('data:image/png;base64,')
    left no-repeat;
  background-size: 40rpx;
}

.icon-github {
  background: url('data:image/png;base64,')
    left no-repeat;
  background-size: 50rpx;
}

.icon-blog {
  background: url('data:image/png;base64,')
    left no-repeat;
  background-size: 50rpx;
}

.audio {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.audio #myAudio {
  width: 750rpx !important;
  background: #fcfcfc;
  bottom: 0;
}

.wx-audio-default {
  width: 750rpx !important;
  bottom: 0;
}

.music-audio {
  width: 100%;
  height: 140rpx;
  background: red;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fcfcfc;
  border-top: 1rpx solid #e3e3e3;
}

.poster,
.poster image {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.music-info {
  padding: 0 30rpx;
  width: 610rpx;
  line-height: 40rpx;
}

.music-title {
  font-size: 28rpx;
  color: #333;
  line-height: 30px;
}

.duration {
  font-size: 24rpx;
  color: #666;
  line-height: 30px;
}

.music-author {
  font-size: 26rpx;
  color: #666;
  padding-left: 30rpx;
}

.music-icon {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.paly {
  background: url(data:image/png;base64,)
    center center no-repeat;
  background-size: 60rpx;
}

.pause {
  background: url(data:image/png;base64,)
    center center no-repeat;
  background-size: 60rpx;
}

@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

.Rotation {
  -webkit-transform: rotate(360deg);
  animation: rotation 3s linear infinite;
  -moz-animation: rotation 3s linear infinite;
  -webkit-animation: rotation 3s linear infinite;
  -o-animation: rotation 3s linear infinite;
}

.progress {
  width: 610rpx;
  height: 4rpx;
  background: #e3e3e3;
  position: absolute;
  bottom: 0;
  right: 0;
}
.currbar {
  width: 0;
  height: 7rpx;
  background: #e3e3e3;
  position: absolute;
  bottom: 0;
  left: 0;
}
.currbar {
  width: 0;
  height: 7rpx;
  background: #5cb85c;
  float: left;
}
